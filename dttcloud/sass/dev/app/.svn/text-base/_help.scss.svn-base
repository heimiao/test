.quick_help{
    position:fixed;
    width:318px; 
    min-height:54px;
    bottom:0px;
    right:30px; 
    background:#fff;
    z-index:135;
    .dev_hlep_switch{
        width:100%;
        height:54px;
        text-align:center;
        color:#fff;
        line-height:54px;
        background:#21a0e8;
        img{
            cursor:pointer;
        }
        span{
            display:inline-block;
            width:80%;
            font-size:18px;
        }
         .help_down,.help_title_icon{
            display:inline-block;
        }.help_close{
            display:none;
        }
    }
    ul{
        width:100%;
        margin:0px; 
        padding:30px;
        border:1px solid #ccc;
         max-height:400px;
        overflow:auto;
        li{
            list-style:none;
//          text-indent:2em;
            background:url("../../images/dev/help_icon.png") 0px 2px no-repeat;
            padding-left:30px;
            line-height:22px; 
            a{
                font-size:12px;
                color:#7f8c8d;
                text-decoration:none;
            }
        }  
    }
}
.help_samll{
    width:102px;
    min-height:34px;
    .dev_hlep_switch{
        width:100%;
        height:34px; 
        line-height:34px;
        span{
            display:inline-block;
            font-size:12px;
            width:70%;
            cursor: pointer;
        }
        .help_down,.help_title_icon{
            display:none;
        }
        .help_close{
            display:inline-block;
        }
    }
    ul{
        display:none;
    }
}
