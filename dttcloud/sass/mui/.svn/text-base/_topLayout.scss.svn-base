.dropdown{
    display:inline-block;
    height:100%;
    position: relative;
    cursor: pointer;
    .dropdown-nav{
      display:none;
      top:99%;
      position:absolute;
      width:105px;
      left:-25px; 
      height:auto;
      text-align: center;
      background:#fff;
      @include radius(2px);
      -webkit-box-shadow:1px 1px 1px 1px #e7e7e7;
      -moz-box-shadow:1px 1px 1px 1px #e7e7e7;
      box-shadow:1px 1px 1px 1px #e7e7e7;
      
//    border:1px solid #e7e7e7; 
      img{
          width:25px;
          z-index:1;
          height:15px;
          position:absolute;
          left:50%;
          margin-left:-15px;
          top:-14px;
      } 
      .dropdown-ul{
          width:100%;
          height:auto;
          margin:0px;
          padding:0px;
          overflow: hidden;
          text-align: center;
          position:relative;
          border-bottom:3px solid #f3856c;
          li{
                width: 100%;
                height:40px;
                padding:0px;
                a{
                    display:block;
                    width:100%;
                    line-height:40px; 
                    color:#000000;
                    font-size:15px;
                    &:hover{
                            color: #ffffff;
                            text-decoration: none;
                            background-color:#f2866c;
                    }
                }
            }
      } 
    }
    >a{height:100%;}
    &:hover{
        .dropdown-nav{
            display:block;
        }
    }
} 
 
