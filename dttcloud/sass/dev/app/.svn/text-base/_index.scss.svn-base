@charset "UTF-8"; 
.index{
    background:#e4e4e4;
    //头部
    .app_top_nav{
        width:100%;
        margin: 0px;
    }
    //createapp 
   .index_application{
        width:100%; 
        background: #fff;
        margin:10px auto;
        .applayHead{
            padding:25px 20px;
            .createApbtn{
              @include data-btn(auto,30px,#f3856c);
              }
            span{
                 font-size:12px;
                 color:#f3856c;
            }
        } 
        .index_list{
            color: #fff;
            background: #21a0e8;
            height: 30px;
            line-height: 30px; 
            padding-left: 20px;
        }
    } 
    
    
    //应用列表
   .app-row{
        margin-top:-10px;
       .applist-panel{
             margin:10px -5px 0px -15px;
             .appInfo{
                 padding:20px;
                 .index_title{
                     height: 70px;
                     border-bottom: 1px dashed #dcdcdc;
                     >div{display:table-cell;vertical-align:top;img{max-width:60px;max-height:60px;}}
                     .index_tit{
                         padding-left: 10px; 
                         overflow:hidden;
                         min-width:100%;
                         white-space: nowrap;
                         text-overflow:ellipsis;
                     }
                     .index_time{
                         color: #7f8c8d;
                         font-size: 12px;
                         vertical-align: bottom;
                     }
                     .injoin{
                         margin-left:12px;
                         color:#f3856c;
                         vertical-align:bottom;
                     }
                 }
                 .index_yong{
                     padding:5px 0px;
                     width: 100%;
                     height: 60px;
                     text-align: center;
                     ul{  
                         width: 100%;
                         margin:0px;padding:0px;
                         li{
                             list-style-type: none;
                             float: left;
                             width:33.333333%;
                             .big_num{
                                 font-size:22px;
                             }
                             .small_mun{
                                 font-size: 12px;
                                 color: #7f8c8d;
                             }
                         }
                     }
                 }
             }
       }
       
       
     //展开更多
       .index_more{
            margin-right:10px;
            margin-top:10px;
            height: 50px;
            line-height: 50px;
            text-align: center;
            background: #fff;
            a{
               color: #000;
               font-size: 16px; 
               text-decoration: none;
            }
       }
       
     //常见问题 
       .questionpanel{
            margin:10px 10px  0px 0px;
           .question{
               padding:20px; 
                >h4{
                   padding-left:10px;
                   font-size:16px;
                   border-left:3px solid #f3856c;
                  }
                ul{
                    margin:0px;padding-left:15px;
                    li{
                        list-style-type:none;
                        line-height:24px;
                        a{
                           font-size:12px;
                            color:#6d6d6d;
                            &:hover{
                                color:#21a0e8;
                            }
                        }
                    }
                }
            }
       } 
       //右边的图片
       .rightimg{
           padding:0px;
          position:relative;
           .divimg{ 
               margin-top:10px;
               padding:0px;
               position: relative;
                 max-width:400px;
               img{
                   width:100%;
               }
               .ide_v{
                   position:absolute;
                   top:76%; 
                   width:100%;
                   color:#fff;
                   left:42%;
               }
           }
           .ideDown{
               width:100%;
               padding:0px;
               position:relative;
               max-width:400px;
               img{
                   width:100%; 
                   margin-top:10px;
               }
               .down_btn{
                   position:absolute;
                   width:100%;
                   left:0px;
                   top:45%;
                   text-align: center;
                   >a{
                       display:inline-block;
                       margin:0px 5px;
                       width:30%;
                   }
                   >span{
                       display: block;
                       margin-top:5px;
                       color:#fff;
                       font-size:1.2rem;
                   }
               }
           }
           
       }
   } 
   
       
    
    
    
}
