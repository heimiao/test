@charset "utf-8";
/* 底部样式表 */ 
.bottom{ 
     border-top:1px solid  #ddd; 
     >div{ 
        border-right:1px solid #ddd;
        padding:0;
        padding-bottom:20px;
        margin-top:30px; 
        ul{ 
             margin:0;
             padding:0;
             width:100%;
             li{ 
                list-style-type:none;
                text-align:center;  
                line-height:25px;
                input[type="button"]{  
                    border:0;
                    width:98px;
                    line-height:28px;
                    outline: none;
                    color:#fff;
                    background: url(../img/black_btn.jpg) no-repeat;
                }
                h3{ 
                        margin-top:0;
                         font-size: 18px;
                        font-weight:100;
                   }
                 a{ 
                        display:block;
                        width:100%;
                        height:100%;
                        font-family: "微软雅黑";
                        font-size:12px;
                        color: #6d6d6d; 
                        img{
                            margin-left:5px;
                            border:0;
                        }
                    }
                  .erweima{
                      width:180px;
//                    overflow: hidden;
                      margin:0 auto;
                  }
                }  
          } 
     } 
}  
.datang-vs{
    margin-top:15px;
    .netvs{
        a{
            margin:0 10px;
            color:#0088cc;
        }  
        margin-bottom:5px;
        color:#6d6d6d;
        font-size:12px;
        text-align:center;
    }
}
