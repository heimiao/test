@charset "utf-8"; 

//登陆注册里边有用该登陆可以去登陆注册里边拷贝html页面
.whiteDialog{
      width:auto;
      max-width:500px;
      margin:50px auto;
      .whiteTitle {
        border:0;  
       }
       .whiteBody{
           .badTitle{
               padding:10px 15px;
               color:#ff611b;
               font-size:14px;
               img{ margin-right:10px;}
           }
           .succeesTitle{
               @extend .badTitle;
               color:#2bcd45;
               h3{margin-left:15px;}
               small{
                    color:#2bcd45;
               }
           }
           .badCont{
               margin:30px auto;
               text-align:center;
               font-size:12px; 
           }
           .succeesCont{
                font-size:12px; 
                padding:5px 30px;
                color:#2b2b2b;
                p{
                    font-size:12px;
                    padding:5px 0px;
                }
                dl{
                    dt{
                        font-weight:500;
                    }
                     width: 203px; margin: 0 auto; color: #aaaaaa; 
                }
                ul{
                    margin:0;padding:0;
                    li{
                       list-style-type:circle;
                       line-height:24px; 
                       margin-left:15px;
                    }
                }
                hr{
                    border:0px;
                    margin:10px auto;
                    border-bottom:1px dashed grey;
                }
                .btn-grey{
                    background:#CCCCCC;
                    border:0px;
                    &:hover{
                        outline:0px;
                        border:0px;
                    }
                }
           } 
           .data-panel{
               display: none;
               .help-block{
                   position:initial;
                   width:100%; 
               } 
               margin:0px 30px 30px 30px;
           }
            @media screen and(max-width:640px){
               .badTitle{
                  padding:10px 0px;
                  h3{
                      margin-left:0px;
                  }
               }
               .succeesCont{
                    padding:5px 0px;
               }
               .data-panel{
                   margin:30px auto;
               }
           }
       } 
       .whiteFooter{
           border:0;
       }
 }
 
