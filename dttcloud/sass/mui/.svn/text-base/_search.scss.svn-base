@charset "UTF-8";  
.leftAsideSearch{
        width:90%;
        height:30px;
        border:1px solid #e8e8e8;
        background:url("//g.369cloud.com/images/static/cloud_school/leftSearch_icon.png") #f3f6f9  right no-repeat;
       @include radius(5px); 
        input{ 
            width:82%;  
            padding-left:10px;
            padding-right:10px;
            border:0;
            outline:none;
            background:#f3f6f9;
            float:left;
            padding-top:3px;
            vertical-align:middle;
        }
        a{
            display:inline-block;
            float:right;
            width:13%;  
            width:30px;
             padding:2px 0;
             &:hover{
                 outline:none;
                 text-underline:none;
                 text-decoration:none;
             }
        }
}   
 