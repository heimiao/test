@charset "utf-8";
@import "../mui/mixins";  
.rdfrm{
    .form-group{ 
        position:relative;
        .input-group{ 
            border:1px solid #c5c5c5;  
            $shadow:0 0 5px 1px rgba(197,197,197,.74); 
            @include shadow($shadow); 
            @include radius();  
            margin-bottom:3px;
            .input-group-addon{
                background:url();
                border:0px;  
            }
            >input{
                padding-left:5px;
                border:0px;
                outline:0px;  
                box-shadow:none;
                font-size:14px;
            }
             @at-root .focus{  
              border:1px solid #a2a2a2 !important;
              $shadow2:0 0 5px 1px rgba(162,162,162,.5) !important;
              @include shadow($shadow2); 
             } 
             //单一为EI8定义的样式
             .form-c{
                line-height: 1.42857;
                width: 100%;
                height:34px;
                padding: 6px 3px;
             } 
        }   
        .leftblock{
         width:70%; 
        }
        .rightblock{
          width:25%;
          img{width:100%; height:36px}
          text-align:right;  
        }  
         @at-root .agreement,.agreement a{ 
                 font-size:12px; 
                 margin:3px 5px;
                 color:#767676; 
            }
        .help-block{
           position:absolute;
           display:none;
           width:200px;
           left:482px;
           top:0px;
           color:#FF6B38;  
           font-size:12px;
           ._error:before{ 
               display:inline-block;
               height:25px;
               vertical-align: middle;
               margin-right:5px;
               content:url("../../images/passport/img/warning_icon.png"); 
           }  
        } 
         @media only screen and (max-width:950px){
             .help-block{
                   position:initial;
                   width:100%; 
              } 
        }  
        //密码找回
        .divselect{
            position:relative;
            width:65%;
            .input-select{
                background:#fff;
                cursor:pointer;
                ~img{
                    position:absolute;
                    top:10px;
                    right:5px;
                    z-index:12;
                    height:15px;
                    cursor: pointer;
                }
            } 
            .select{
                 display:none;
                 position:absolute;
                 z-index:12;
                 overflow: hidden;
                 list-style-type:none;
                 background:#fff;
                 width:100%;
                 padding:0px;
                 margin-left:-45px;
                 top:35px;
                 border:1px solid #c5c5c5;
                 li{ 
                    width:100%;
                    padding-left:50px;
                    line-height:35px; 
                    cursor:pointer;
                    overflow: hidden;
                    border-bottom:1px solid #c5c5c5;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                     &:hover{
                         color:#fff;
                         background:#4689D8;
                          @include radius();  
                     }
                  } 
            }  
        } 
        .pwdcabackbtn{
            height:35px;
            color:#4689D8; 
            width:35%;
            max-width:90px;
        } 
    }  
    //密码找回第一页
    .data-point{
            text-align: center;
            img{
                 max-width:430px; 
            } 
        } 
     @media only screen and (max-width:640px){
               .data-point{
                    img{
                        width:100%;
                    } 
                } 
      }
     .frm-footer{
           text-align:center; 
           button{
               margin-top:10px;
               min-width:200px;
               width:100%;
               font-size:20px;
           }
      }
}  